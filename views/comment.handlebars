<section>
  <div class="title_header">
    <h3>{{title}}</h3>
  </div>
  <div class="content_body">
    <h4>
      {{content}}
    </h4>
    <div class="user_date">
      <h5 id="username">{{user}}</h5>
      <span>/</span>
      <h5 id="date">{{date}}</h5>
    </div>

    <div class="comments">
      <li id="adjust">COMMENT?</li>
      <textarea id="post_content"></textarea>
      <button id="comment"><h3>SUBMIT</h3></button>
    </div>
  </div>
</section>
<script src="/public/js/comment-post.js"></script>